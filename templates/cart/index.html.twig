{% extends 'base.html.twig' %}

{% block title %}Shopping Cart - EcoStore{% endblock %}

{% block body %}
<h1 class="mb-4">üõí Your Shopping Cart</h1>

{% if cart.cartItems is empty %}
    <div class="alert alert-info text-center py-5">
        <h3>Your cart is empty</h3>
        <p>Start adding eco-friendly products to your cart!</p>
        <a href="{{ path('product_index') }}" class="btn btn-eco btn-lg mt-3">Browse Products</a>
    </div>
{% else %}
    <div class="row">
        <div class="col-lg-8">
            {% for item in cart.cartItems %}
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <div class="product-img" style="height: 80px; font-size: 2.5rem; border-radius: 10px;">üåø</div>
                        </div>
                        <div class="col-md-4">
                            <h5>{{ item.product.nom }}</h5>
                            <small class="text-muted">{{ item.product.category.nom }}</small>
                        </div>
                        <div class="col-md-2 text-center">
                            <strong class="text-success">{{ item.product.prix }} TND</strong>
                        </div>
                        <div class="col-md-2">
                            <div class="btn-group" role="group">
                                <a href="{{ path('cart_update', {id: item.id, action: 'decrease'}) }}"
                                   class="btn btn-outline-secondary btn-sm">-</a>
                                <button class="btn btn-outline-secondary btn-sm" disabled>{{ item.quantity }}</button>
                                <a href="{{ path('cart_update', {id: item.id, action: 'increase'}) }}"
                                   class="btn btn-outline-secondary btn-sm">+</a>
                            </div>
                        </div>
                        <div class="col-md-2 text-end">
                            <strong>{{ item.subtotal }} TND</strong>
                            <form method="post" action="{{ path('cart_remove', {id: item.id}) }}" class="d-inline">
                                <button type="submit" class="btn btn-link text-danger btn-sm p-0 ms-2"
                                        onclick="return confirm('Remove this item?')">
                                    ‚úï
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

            <div class="d-flex justify-content-between">
                <a href="{{ path('product_index') }}" class="btn btn-outline-secondary">Continue Shopping</a>
                <form method="post" action="{{ path('cart_clear') }}" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger"
                            onclick="return confirm('Clear entire cart?')">
                        Clear Cart
                    </button>
                </form>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-2" style="top: 20px;">
                <div class="card-body">
                    <h4 class="card-title mb-4">Order Summary</h4>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Items ({{ cart.totalItems }})</span>
                        <span>{{ cart.total }} TND</span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free üéâ</span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong class="text-success h4">{{ cart.total }} TND</strong>
                    </div>

                    <a href="{{ path('order_checkout') }}" class="btn btn-eco w-100 btn-lg">
                        Proceed to Checkout
                    </a>

                    <div class="alert alert-success mt-3 mb-0 text-center">
                        <small>üåç Eco-friendly shipping guaranteed!</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
