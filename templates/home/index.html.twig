{% extends 'base.html.twig' %}

{% block body %}
<div class="hero text-center">
    <h1 class="display-4 fw-bold text-success">Welcome to EcoStore ðŸŒ¿</h1>
    <p class="lead text-muted">Discover sustainable, eco-friendly products for a better tomorrow</p>
    <a href="{{ path('product_index') }}" class="btn btn-eco btn-lg mt-3">Explore Products</a>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Featured Products</h2>
    </div>
    {% for product in products|slice(0, 6) %}
    <div class="col-md-4 mb-4">
        <div class="card product-card h-100">
            <div class="product-img">ðŸŒ±</div>
            <div class="card-body">
                <span class="eco-badge">Eco-Friendly</span>
                <h5 class="card-title mt-2">{{ product.nom }}</h5>
                <p class="card-text text-muted">{{ product.description|slice(0, 80) }}...</p>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="h5 text-success mb-0">{{ product.prix }} TND</span>
                    <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-eco btn-sm">View Details</a>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12 text-center text-muted py-5">
        <p class="lead">No products available yet.</p>
        <p>Add some products to get started!</p>
    </div>
    {% endfor %}
</div>
{% endblock %}