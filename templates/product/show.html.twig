{% extends 'base.html.twig' %}

{% block title %}{{ product.nom }} - EcoStore{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        {% if product.image %}
            <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                 class="img-fluid rounded" 
                 alt="{{ product.nom }}"
                 style="max-height: 500px; width: 100%; object-fit: cover;">
        {% else %}
            <div class="product-img" style="height: 400px; border-radius: 15px; font-size: 8rem;">ðŸŒ¿</div>
        {% endif %}
    </div>
    <div class="col-md-6">
        <span class="eco-badge">{{ product.category.nom }}</span>
        <h1 class="mt-3">{{ product.nom }}</h1>
        <h3 class="text-success mb-4">{{ product.prix }} TND</h3>
        <p class="lead">{{ product.description }}</p>
        
        <div class="alert alert-info">
            <strong>ðŸ“¦ Stock:</strong> 
            {% if product.stock > 0 %}
                {{ product.stock }} units available
            {% else %}
                <span class="text-danger">Out of stock</span>
            {% endif %}
        </div>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if product.stock > 0 %}
                <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-eco btn-lg">
                    Add to Cart ðŸ›’
                </a>
            {% else %}
                <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
            {% endif %}
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-eco btn-lg">
                Login to Add to Cart ðŸ›’
            </a>
        {% endif %}
        
        <a href="{{ path('product_index') }}" class="btn btn-outline-secondary btn-lg ms-2">
            Back to Products
        </a>

        <div class="mt-4 p-3" style="background: var(--eco-light); border-radius: 15px;">
            <h5 class="text-success">ðŸŒ± Why Choose Eco-Friendly?</h5>
            <ul class="mb-0">
                <li>Sustainable & biodegradable materials</li>
                <li>Reduces environmental impact</li>
                <li>Supports green initiatives</li>
                <li>High-quality & long-lasting</li>
            </ul>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h3 class="text-center mb-4">Related Products</h3>
    </div>
    {# You can add related products here later #}
</div>
{% endblock %}