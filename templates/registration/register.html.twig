{% extends 'base.html.twig' %}

{% block title %}Register - EcoStore{% endblock %}

{% block stylesheets %}
    <style>
        .register-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 80px 0;
            position: relative;
            background: linear-gradient(135deg, rgba(26, 58, 46, 0.75) 0%, rgba(45, 95, 74, 0.65) 100%),
            url('https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?q=80&w=2000') center/cover no-repeat fixed;
        }

        .register-particles-bg {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
            pointer-events: none;
            z-index: 0;
        }

        .register-particle {
            position: absolute;
            width: 3px;
            height: 3px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            animation: float-up linear infinite;
        }

        @keyframes float-up {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        .register-container {
            position: relative;
            z-index: 1;
            max-width: 700px;
            width: 100%;
        }

        .register-card {
            border: none;
            border-radius: 40px;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(40px) saturate(180%);
            box-shadow: 0 30px 90px rgba(0, 0, 0, 0.35),
            0 0 0 1px rgba(255, 255, 255, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.9);
            transition: transform 0.6s ease;
            position: relative;
            overflow: visible;
        }

        .register-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 40px 110px rgba(0, 0, 0, 0.4),
            0 0 0 1px rgba(255, 255, 255, 0.3);
        }

        .register-card-body {
            padding: 3.5rem 4rem;
        }

        .register-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .register-icon-wrapper {
            width: 90px;
            height: 90px;
            margin: 0 auto 1.5rem;
            animation: icon-float 4s ease-in-out infinite;
        }

        @keyframes icon-float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-12px);
            }
        }

        .register-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, var(--sage-primary), var(--forest-dark));
            border-radius: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            box-shadow: 0 12px 35px rgba(107, 144, 128, 0.4),
            inset 0 2px 0 rgba(255, 255, 255, 0.3);
        }

        .register-header h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: var(--forest-deep);
            margin-bottom: 0.8rem;
        }

        .register-header p {
            color: var(--sage-primary);
            font-size: 1rem;
            font-weight: 500;
        }

        .register-form .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .register-form .form-label {
            display: block;
            color: var(--forest-dark);
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            margin-bottom: 0.6rem;
        }

        .register-form .form-control,
        .register-form .form-select {
            width: 100%;
            border: 2px solid rgba(107, 144, 128, 0.25);
            border-radius: 16px;
            padding: 1rem 1.2rem;
            font-size: 0.95rem;
            background: white;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 6px rgba(0, 0, 0, 0.06);
        }

        .register-form .form-control:focus,
        .register-form .form-select:focus {
            border-color: var(--sage-primary);
            outline: none;
            box-shadow: 0 0 0 5px rgba(107, 144, 128, 0.1),
            inset 0 2px 6px rgba(0, 0, 0, 0.06);
            transform: translateY(-2px);
        }

        .register-form .is-invalid {
            border-color: #dc3545;
        }

        .register-form .is-invalid:focus {
            box-shadow: 0 0 0 5px rgba(220, 53, 69, 0.1);
        }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.85rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .input-group-text {
            background: linear-gradient(135deg, var(--sage-light), var(--sage-primary));
            border: 2px solid rgba(107, 144, 128, 0.25);
            border-right: none;
            border-radius: 16px 0 0 16px;
            color: white;
            font-weight: 600;
            padding: 1rem 1.2rem;
        }

        .input-group .form-control {
            width: auto;
            flex: 1 1 auto;
        }

        /* Password Toggle */
        .password-wrapper {
            position: relative;
        }

        .password-wrapper .form-control {
            padding-right: 3rem;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--sage-primary);
            padding: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }

        .password-toggle:hover {
            color: var(--forest-dark);
        }

        .password-toggle svg {
            width: 20px;
            height: 20px;
        }

        .custom-terms-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            cursor: pointer;
            margin-bottom: 2rem;
        }

        .terms-checkbox-wrapper {
            position: relative;
            width: 22px;
            height: 22px;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .terms-checkbox-wrapper input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

        .terms-checkmark {
            position: absolute;
            top: 0;
            left: 0;
            width: 22px;
            height: 22px;
            background: white;
            border: 2px solid rgba(107, 144, 128, 0.3);
            border-radius: 7px;
            transition: all 0.3s ease;
        }

        .terms-checkbox-wrapper input:checked ~ .terms-checkmark {
            background: linear-gradient(135deg, var(--sage-primary), var(--forest-dark));
            border-color: var(--forest-dark);
        }

        .terms-checkmark::after {
            content: '';
            position: absolute;
            display: none;
            left: 6px;
            top: 2px;
            width: 5px;
            height: 10px;
            border: solid white;
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
        }

        .terms-checkbox-wrapper input:checked ~ .terms-checkmark::after {
            display: block;
        }

        .terms-label {
            color: var(--forest-dark);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .btn-register {
            width: 100%;
            padding: 1.15rem;
            font-size: 1rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: uppercase;
            border: none;
            border-radius: 16px;
            background: linear-gradient(135deg, var(--sage-primary), var(--forest-dark));
            color: white;
            box-shadow: 0 8px 25px rgba(107, 144, 128, 0.4),
            inset 0 2px 0 rgba(255, 255, 255, 0.2);
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(61, 90, 71, 0.5);
            background: linear-gradient(135deg, var(--forest-dark), var(--forest-deep));
        }

        .register-divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
        }

        .register-divider::before,
        .register-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(107, 144, 128, 0.3), transparent);
        }

        .register-divider span {
            padding: 0 1rem;
            color: var(--sage-primary);
            font-size: 0.85rem;
            font-weight: 600;
        }

        .login-box {
            text-align: center;
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(107, 144, 128, 0.06), rgba(164, 195, 178, 0.06));
            border-radius: 18px;
            border: 2px solid rgba(107, 144, 128, 0.12);
        }

        .login-box p {
            margin: 0;
            color: var(--forest-dark);
        }

        .login-link {
            color: var(--forest-deep);
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .login-link:hover {
            color: var(--forest-dark);
        }

        @media (max-width: 768px) {
            .register-card-body {
                padding: 2.5rem 2rem;
            }

            .register-header h2 {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-particles-bg">
        <div class="register-particle" style="left: 8%; animation-duration: 16s; animation-delay: 0s;"></div>
        <div class="register-particle" style="left: 22%; animation-duration: 19s; animation-delay: 2s;"></div>
        <div class="register-particle" style="left: 38%; animation-duration: 21s; animation-delay: 4s;"></div>
        <div class="register-particle" style="left: 52%; animation-duration: 17s; animation-delay: 1s;"></div>
        <div class="register-particle" style="left: 68%; animation-duration: 20s; animation-delay: 3s;"></div>
        <div class="register-particle" style="left: 82%; animation-duration: 18s; animation-delay: 5s;"></div>
    </div>

    <div class="register-page">
        <div class="register-container">
            <div class="register-card">
                <div class="register-card-body">
                    <div class="register-header">
                        <div class="register-icon-wrapper">
                            <div class="register-icon">üåø</div>
                        </div>
                        <h2>Join EcoStore</h2>
                        <p>Start your sustainable living journey today</p>
                    </div>

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'register-form'}}) }}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.prenom) }}
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control' ~ (registrationForm.prenom.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'John'}}) }}
                                {% for error in registrationForm.prenom.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.nom) }}
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control' ~ (registrationForm.nom.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Doe'}}) }}
                                {% for error in registrationForm.nom.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control' ~ (registrationForm.email.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'your@email.com'}}) }}
                        {% for error in registrationForm.email.vars.errors %}
                            <div class="invalid-feedback d-block">{{ error.message }}</div>
                        {% endfor %}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword.first) }}
                                <div class="password-wrapper">
                                    {{ form_widget(registrationForm.plainPassword.first, {
                                        attr: {
                                            class: 'form-control' ~ (registrationForm.plainPassword.first.vars.errors|length ? ' is-invalid' : ''),
                                            placeholder: 'Enter your Password'
                                        }
                                    }) }}
                                    <button type="button" class="password-toggle"
                                            onclick="togglePassword('{{ registrationForm.plainPassword.first.vars.id }}', this)">
                                        üëÅ
                                    </button>
                                </div>
                                {% for error in registrationForm.plainPassword.first.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword.second) }}
                                <div class="password-wrapper">
                                    {{ form_widget(registrationForm.plainPassword.second, {
                                        attr: {
                                            class: 'form-control' ~ (registrationForm.plainPassword.second.vars.errors|length ? ' is-invalid' : ''),
                                            placeholder: 'Confirm your Password'
                                        }
                                    }) }}
                                    <button type="button" class="password-toggle"
                                            onclick="togglePassword('{{ registrationForm.plainPassword.second.vars.id }}', this)">
                                        üëÅ
                                    </button>
                                </div>
                                {% for error in registrationForm.plainPassword.second.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.telephone) }}
                        <div class="input-group">
                            <span class="input-group-text">+216</span>
                            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control' ~ (registrationForm.telephone.vars.errors|length ? ' is-invalid' : ''), 'placeholder':'12345678'}}) }}
                        </div>
                        {% for error in registrationForm.telephone.vars.errors %}
                            <div class="invalid-feedback d-block">{{ error.message }}</div>
                        {% endfor %}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.street) }}
                                {{ form_widget(registrationForm.street, {'attr': {'class':'form-control' ~ (registrationForm.street.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Street address'}}) }}
                                {% for error in registrationForm.street.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(registrationForm.city) }}
                                {{ form_widget(registrationForm.city, {'attr': {'class':'form-control' ~ (registrationForm.city.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'City'}}) }}
                                {% for error in registrationForm.city.vars.errors %}
                                    <div class="invalid-feedback d-block">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.postalCode) }}
                        {{ form_widget(registrationForm.postalCode, {'attr': {'class':'form-control' ~ (registrationForm.postalCode.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Postal code'}}) }}
                        {% for error in registrationForm.postalCode.vars.errors %}
                            <div class="invalid-feedback d-block">{{ error.message }}</div>
                        {% endfor %}
                    </div>

                    <label class="custom-terms-checkbox">
                        <div class="terms-checkbox-wrapper">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': (registrationForm.agreeTerms.vars.errors|length ? 'is-invalid' : '')}}) }}
                            <span class="terms-checkmark"></span>
                        </div>
                        <span class="terms-label">{{ form_label(registrationForm.agreeTerms) }}</span>
                    </label>
                    {% for error in registrationForm.agreeTerms.vars.errors %}
                        <div class="invalid-feedback d-block"
                             style="margin-top: -1rem; margin-bottom: 1rem;">{{ error.message }}</div>
                    {% endfor %}

                    <button type="submit" class="btn btn-register">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </button>

                    {{ form_end(registrationForm) }}

                    <div class="register-divider">
                        <span>Already a member?</span>
                    </div>

                    <div class="login-box">
                        <p>
                            Have an account?
                            <a href="{{ path('app_login') }}" class="login-link">Sign in here ‚Üí</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const eyeOpen = button.querySelector('.eye-open');
            const eyeClosed = button.querySelector('.eye-closed');

            if (input.type === 'password') {
                input.type = 'text';
                eyeOpen.style.display = 'none';
                eyeClosed.style.display = 'block';
            } else {
                input.type = 'password';
                eyeOpen.style.display = 'block';
                eyeClosed.style.display = 'none';
            }
        }
    </script>

    {% if emailExists %}
        <div class="modal fade" id="emailExistsModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius:20px; border: none; overflow: hidden;">
                    <div class="modal-header"
                         style="background: linear-gradient(135deg, #dc3545, #c82333); color: white; border: none;">
                        <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Email Already Exists</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" style="padding: 2rem;">
                        <p style="margin: 0; color: var(--charcoal);">The email you entered is already registered.
                            Please login or use another email.</p>
                    </div>
                    <div class="modal-footer" style="border: none; padding: 1rem 2rem 2rem;">
                        <a href="{{ path('app_login') }}" class="btn btn-eco">Login</a>
                        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                var modal = new bootstrap.Modal(document.getElementById('emailExistsModal'));
                modal.show();
            });
        </script>
    {% endif %}
{% endblock %}
