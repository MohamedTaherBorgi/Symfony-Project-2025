{% extends 'base.html.twig' %}

{% block title %}My Orders - EcoStore{% endblock %}

{% block stylesheets %}
<style>
    .my-orders-page {
        padding: 2rem 0;
    }

    .page-header {
        margin-bottom: 3rem;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: var(--charcoal);
        font-size: 1.05rem;
    }

    /* Order Card */
    .order-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .order-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .order-content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr auto;
        gap: 2rem;
        align-items: center;
    }

    .order-number-section h5 {
        font-family: 'Playfair Display', serif;
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin: 0 0 0.5rem 0;
    }

    .order-date {
        color: #6b7b75;
        font-size: 0.9rem;
    }

    .order-amount {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--sage-primary);
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: capitalize;
    }

    .status-badge::before {
        content: '';
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .status-badge.pending {
        background: rgba(255, 193, 7, 0.15);
        color: #f57c00;
    }

    .status-badge.pending::before {
        background: #f57c00;
    }

    .status-badge.processing {
        background: rgba(33, 150, 243, 0.15);
        color: #1976d2;
    }

    .status-badge.processing::before {
        background: #1976d2;
    }

    .status-badge.shipped {
        background: rgba(156, 39, 176, 0.15);
        color: #7b1fa2;
    }

    .status-badge.shipped::before {
        background: #7b1fa2;
    }

    .status-badge.delivered {
        background: rgba(76, 175, 80, 0.15);
        color: #388e3c;
    }

    .status-badge.delivered::before {
        background: #388e3c;
    }

    .status-badge.cancelled {
        background: rgba(244, 67, 54, 0.15);
        color: #d32f2f;
    }

    .status-badge.cancelled::before {
        background: #d32f2f;
    }

    .order-items-count {
        color: #6b7b75;
        font-size: 0.95rem;
    }

    .btn-view-order {
        padding: 0.625rem 1.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        background: var(--sage-primary);
        color: white;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-view-order:hover {
        background: var(--forest-dark);
        color: white;
        transform: translateY(-2px);
    }

    /* Empty State */
    .empty-state {
        background: white;
        border-radius: 16px;
        padding: 4rem 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        text-align: center;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 2rem;
        opacity: 0.2;
    }

    .empty-title {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 1rem;
    }

    .empty-text {
        color: #6b7b75;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .btn-shop {
        padding: 1rem 2.5rem;
        font-size: 1.05rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        background: var(--sage-primary);
        color: white;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        box-shadow: 0 2px 8px rgba(107, 123, 117, 0.2);
    }

    .btn-shop:hover {
        background: var(--forest-dark);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(107, 123, 117, 0.3);
    }

    @media (max-width: 992px) {
        .order-content {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .btn-view-order {
            width: 100%;
            justify-content: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="my-orders-page">
    <div class="page-header">
        <h1 class="page-title">My Orders</h1>
        <p class="page-subtitle">Track and view your order history</p>
    </div>

    {% if orders is empty %}
        <div class="empty-state">
            <div class="empty-icon">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
            </div>
            <h3 class="empty-title">No Orders Yet</h3>
            <p class="empty-text">Start shopping for eco-friendly products!</p>
            <a href="{{ path('product_index') }}" class="btn-shop">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                Browse Products
            </a>
        </div>
    {% else %}
        {% for order in orders %}
        <div class="order-card">
            <div class="order-content">
                <div class="order-number-section">
                    <h5>{{ order.orderNumber }}</h5>
                    <small class="order-date">{{ order.createdAt|date('d M Y, H:i') }}</small>
                </div>
                
                <div>
                    <span class="order-amount">{{ order.totalAmount }} TND</span>
                </div>
                
                <div>
                    {% if order.status == 'pending' %}
                        <span class="status-badge pending">Pending</span>
                    {% elseif order.status == 'processing' %}
                        <span class="status-badge processing">Processing</span>
                    {% elseif order.status == 'shipped' %}
                        <span class="status-badge shipped">Shipped</span>
                    {% elseif order.status == 'delivered' %}
                        <span class="status-badge delivered">Delivered</span>
                    {% else %}
                        <span class="status-badge cancelled">{{ order.status|title }}</span>
                    {% endif %}
                </div>
                
                <div>
                    <small class="order-items-count">{{ order.orderItems|length }} item{{ order.orderItems|length > 1 ? 's' : '' }}</small>
                </div>
                
                <div>
                    <a href="{{ path('order_show', {id: order.id}) }}" class="btn-view-order">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                        View Details
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
