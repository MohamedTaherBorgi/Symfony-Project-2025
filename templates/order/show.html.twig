{% extends 'base.html.twig' %}

{% block title %}Order {{ order.orderNumber }} - EcoStore{% endblock %}

{% block stylesheets %}
<style>
    .order-detail-page {
        padding: 2rem 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        font-size: 0.9rem;
        color: #6b7b75;
    }

    .breadcrumb a {
        color: var(--sage-primary);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
        color: var(--forest-dark);
    }

    .breadcrumb-separator {
        color: #d0d0d0;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: var(--forest-deep);
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        background: #e0e0e0;
        color: var(--charcoal);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background: #d0d0d0;
        color: var(--charcoal);
        transform: translateY(-2px);
    }

    .order-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
    }

    .card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        margin-bottom: 2rem;
    }

    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }

    .detail-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    .detail-item {
        margin-bottom: 1.25rem;
    }

    .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b7b75;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--charcoal);
        font-weight: 500;
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: capitalize;
    }

    .status-badge::before {
        content: '';
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }

    .status-badge.pending {
        background: rgba(255, 193, 7, 0.15);
        color: #f57c00;
    }

    .status-badge.pending::before {
        background: #f57c00;
    }

    .status-badge.processing {
        background: rgba(33, 150, 243, 0.15);
        color: #1976d2;
    }

    .status-badge.processing::before {
        background: #1976d2;
    }

    .status-badge.shipped {
        background: rgba(156, 39, 176, 0.15);
        color: #7b1fa2;
    }

    .status-badge.shipped::before {
        background: #7b1fa2;
    }

    .status-badge.delivered {
        background: rgba(76, 175, 80, 0.15);
        color: #388e3c;
    }

    .status-badge.delivered::before {
        background: #388e3c;
    }

    .status-badge.cancelled {
        background: rgba(244, 67, 54, 0.15);
        color: #d32f2f;
    }

    .status-badge.cancelled::before {
        background: #d32f2f;
    }

    .status-badge.paid {
        background: rgba(76, 175, 80, 0.15);
        color: #388e3c;
    }

    .status-badge.paid::before {
        background: #388e3c;
    }

    .status-badge.unpaid {
        background: rgba(255, 193, 7, 0.15);
        color: #f57c00;
    }

    .status-badge.unpaid::before {
        background: #f57c00;
    }

    /* Order Items Table */
    .items-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .items-table thead th {
        background: #f8f9fa;
        color: #6b7b75;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem;
        border: none;
        text-align: left;
    }

    .items-table thead th:first-child {
        border-radius: 8px 0 0 0;
    }

    .items-table thead th:last-child {
        border-radius: 0 8px 0 0;
        text-align: right;
    }

    .items-table tbody tr {
        border-bottom: 1px solid #f0f0f0;
    }

    .items-table tbody td {
        padding: 1.25rem 1rem;
        color: var(--charcoal);
        font-size: 0.95rem;
    }

    .items-table tbody td:last-child {
        text-align: right;
    }

    .items-table tfoot td {
        padding: 1.25rem 1rem;
        font-weight: 700;
        font-size: 1.1rem;
        border-top: 2px solid #f0f0f0;
    }

    .total-amount {
        color: var(--sage-primary);
        font-size: 1.3rem;
    }

    .product-link {
        color: var(--sage-primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .product-link:hover {
        color: var(--forest-dark);
    }

    .deleted-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.2rem 0.6rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        background: rgba(255, 193, 7, 0.15);
        color: #f57c00;
        margin-left: 0.5rem;
    }

    /* Update Status Form */
    .form-label {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--forest-deep);
        margin-bottom: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-select {
        width: 100%;
        padding: 0.875rem 1.25rem;
        font-size: 1rem;
        color: var(--charcoal);
        background: #f8f9fa;
        border: 2px solid transparent;
        border-radius: 10px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .form-select:focus {
        outline: none;
        background: white;
        border-color: var(--sage-primary);
        box-shadow: 0 0 0 3px rgba(107, 123, 117, 0.1);
    }

    .btn-update {
        width: 100%;
        padding: 0.875rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        background: var(--sage-primary);
        color: white;
        transition: all 0.3s ease;
        cursor: pointer;
        margin-top: 1rem;
    }

    .btn-update:hover {
        background: var(--forest-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(107, 123, 117, 0.3);
    }

    /* Shipping Info */
    .shipping-info {
        line-height: 1.8;
    }

    .shipping-label {
        font-weight: 600;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
        display: block;
    }

    .shipping-value {
        color: var(--charcoal);
        margin-bottom: 1rem;
        display: block;
    }

    @media (max-width: 992px) {
        .order-grid {
            grid-template-columns: 1fr;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .detail-row {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="order-detail-page">
    <div class="breadcrumb">
      
        <span class="breadcrumb-separator">/</span>
        <a href="{{ path('order_my_orders') }}">Orders</a>
        <span class="breadcrumb-separator">/</span>
        <span>{{ order.orderNumber }}</span>
    </div>

    <div class="page-header">
        <h1 class="page-title">Order {{ order.orderNumber }}</h1>
        <a href="{{ path('order_my_orders') }}" class="btn-back">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back to Orders
        </a>
    </div>

    <div class="order-grid">
        <div>
            <!-- Order Details Card -->
            <div class="card">
                <h5 class="card-title">Order Details</h5>
                <div class="detail-row">
                    <div>
                        <div class="detail-item">
                            <div class="detail-label">Order Number</div>
                            <div class="detail-value">{{ order.orderNumber }}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Order Date</div>
                            <div class="detail-value">{{ order.createdAt|date('d M Y, H:i') }}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Customer</div>
                            <div class="detail-value">{{ order.user.prenom }} {{ order.user.nom }}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Email</div>
                            <div class="detail-value">{{ order.user.email }}</div>
                        </div>
                    </div>
                    <div>
                        <div class="detail-item">
                            <div class="detail-label">Status</div>
                            <div class="detail-value">
                                {% if order.status == 'pending' %}
                                    <span class="status-badge pending">Pending</span>
                                {% elseif order.status == 'processing' %}
                                    <span class="status-badge processing">Processing</span>
                                {% elseif order.status == 'shipped' %}
                                    <span class="status-badge shipped">Shipped</span>
                                {% elseif order.status == 'delivered' %}
                                    <span class="status-badge delivered">Delivered</span>
                                {% else %}
                                    <span class="status-badge cancelled">{{ order.status|title }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Payment Method</div>
                            <div class="detail-value">{{ order.paymentMethod|title|replace({'_': ' '}) }}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Payment Status</div>
                            <div class="detail-value">
                                <span class="status-badge {{ order.paymentStatus == 'paid' ? 'paid' : 'unpaid' }}">
                                    {{ order.paymentStatus|title }}
                                </span>
                            </div>
                        </div>
                        {% if order.deliveredAt %}
                            <div class="detail-item">
                                <div class="detail-label">Delivered At</div>
                                <div class="detail-value">{{ order.deliveredAt|date('d M Y, H:i') }}</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="card">
                <h5 class="card-title">Order Items</h5>
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in order.orderItems %}
                        <tr>
                            <td>
                                {% if item.product %}
                                    <a href="{{ path('product_show', {id: item.product.id}) }}" class="product-link" target="_blank">
                                        {{ item.product.nom }}
                                    </a>
                                {% else %}
                                    {{ item.productName ?? 'Deleted Product' }}
                                    <span class="deleted-badge">Deleted</span>
                                {% endif %}
                            </td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.unitPrice }} TND</td>
                            <td>{{ item.subtotal }} TND</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" style="text-align: right;">Total:</td>
                            <td><span class="total-amount">{{ order.totalAmount }} TND</span></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

       

            <!-- Shipping Information Card -->
            <div class="card">
                <h5 class="card-title">Shipping Information</h5>
                <div class="shipping-info">
                    <span class="shipping-label">Address:</span>
                    <span class="shipping-value">{{ order.shippingAddress }}</span>
                    
                    <span class="shipping-label">Phone:</span>
                    <span class="shipping-value">{{ order.phone }}</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
