{% extends 'base.html.twig' %}

{% block title %}Checkout - EcoStore{% endblock %}

{% block body %}
<h1 class="mb-4">ðŸ’³ Checkout</h1>

<form method="post">
    <div class="row">
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Shipping Information</h4>
                    
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" 
                               value="{{ app.user.prenom ~ ' ' ~ app.user.nom }}" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address *</label>
                        <textarea name="address" class="form-control" rows="3" 
                                  required>{{ app.user.adresse }}</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone *</label>
                        <input type="tel" name="phone" class="form-control" 
                               value="{{ app.user.telephone }}" required>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Payment Method</h4>
                    
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="payment_method" 
                               id="cod" value="cash_on_delivery" checked>
                        <label class="form-check-label" for="cod">
                            <strong>Cash on Delivery</strong>
                            <small class="d-block text-muted">Pay when you receive your order</small>
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment_method" 
                               id="card" value="card">
                        <label class="form-check-label" for="card">
                            <strong>Credit/Debit Card</strong>
                            <small class="d-block text-muted">Secure online payment</small>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h4 class="card-title mb-4">Order Summary</h4>

                    {% for item in cart.cartItems %}
                    <div class="d-flex justify-content-between mb-2">
                        <span>{{ item.product.nom }} Ã— {{ item.quantity }}</span>
                        <span>{{ item.subtotal }} TND</span>
                    </div>
                    {% endfor %}

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>{{ cart.total }} TND</span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong class="text-success h4">{{ cart.total }} TND</strong>
                    </div>

                    <button type="submit" class="btn btn-eco w-100 btn-lg mb-3">
                        Place Order
                    </button>

                    <div class="alert alert-info text-center mb-0">
                        <small>ðŸ”’ Secure checkout</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}