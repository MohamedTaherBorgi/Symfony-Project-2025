{% extends 'base.html.twig' %}

{% block title %}Checkout - EcoStore{% endblock %}

{% block body %}
    <h1 class="mb-4">ðŸ›’ Checkout</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3">Shipping Information</h4>
                    <form method="post">
                        <div class="mb-3">
                            <label for="street" class="form-label">Street</label>
                            <input type="text" class="form-control" id="street" name="street"
                                   value="{{ user.street }}">
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="city"
                                   value="{{ user.city }}">
                        </div>
                        <div class="mb-3">
                            <label for="postalCode" class="form-label">Postal Code</label>
                            <input type="text" class="form-control" id="postalCode" name="postalCode"
                                   value="{{ user.postalCode }}">
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone"
                                   value="{{ user.telephone }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select name="payment_method" class="form-select">
                                <option value="cash">Cash on Delivery</option>
                                <option value="card">Credit/Debit Card</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-eco btn-lg">Place Order</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card" style="top: 20px;">
                <div class="card-body">
                    <h4 class="card-title mb-4">Order Summary</h4>
                    {% for item in cart.cartItems %}
                        <div class="d-flex justify-content-between mb-2">
                            <span>{{ item.product.nom }} x{{ item.quantity }}</span>
                            <span>{{ item.subtotal }} TND</span>
                        </div>
                    {% endfor %}
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Total Items:</strong>
                        <span>{{ cart.totalItems }}</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Total:</strong>
                        <span class="text-success">{{ cart.total }} TND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Shipping:</strong>
                        <span class="text-success">Free ðŸŽ‰</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
