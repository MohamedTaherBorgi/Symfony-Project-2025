{% extends 'base.html.twig' %}

{% block title %}Login - EcoStore{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg border-0" style="border-radius: 20px;">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h2 class="fw-bold">ðŸŒ± Welcome Back!</h2>
                    <p class="text-muted">Login to your EcoStore account</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               name="_username" 
                               value="{{ last_username }}" 
                               required 
                               autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" 
                               class="form-control" 
                               id="password" 
                               name="_password" 
                               required>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="remember" name="_remember_me">
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-eco w-100 py-2 mb-3">Login</button>
                </form>

                <hr>
                <p class="text-center mb-0">
                    Don't have an account? 
                    <a href="{{ path('app_register') }}" class="text-success fw-bold">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}