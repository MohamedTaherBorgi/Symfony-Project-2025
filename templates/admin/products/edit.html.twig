{% extends 'base.html.twig' %}

{% block title %}Edit Product - Admin{% endblock %}

{% block body %}
<h1 class="mb-4">✏️ Edit Product</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    
                    {% if product.image %}
                    <div class="mb-3">
                        <label>Current Image:</label><br>
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                             style="max-width: 200px;" class="img-thumbnail">
                    </div>
                    {% endif %}

                    <div class="mt-4">
                        <button type="submit" class="btn btn-eco">Update Product</button>
                        <a href="{{ path('admin_products') }}" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}