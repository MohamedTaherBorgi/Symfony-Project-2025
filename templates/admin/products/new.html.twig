{% extends 'base.html.twig' %}

{% block title %}Add Product - Admin{% endblock %}

{% block body %}
<h1 class="mb-4">âž• Add New Product</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.description) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.prix) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>

                    {{ form_row(form.category) }}
                    {{ form_row(form.imageFile) }}

                    <div class="mt-4">
                        <button type="submit" class="btn btn-eco">Create Product</button>
                        <a href="{{ path('admin_products') }}" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}