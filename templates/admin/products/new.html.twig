{% extends 'base.html.twig' %}

{% block title %}Add Product - Admin{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center">âž• Add New Product</h1>

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">

            <div class="card shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-4">

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, { attr: { class: 'form-control' } }) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, { attr: { class: 'form-control' } }) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prix) }}
                            {{ form_widget(form.prix, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(form.prix) }}
                        </div>

                        <div class="col-md-6 mb-3">
                            {{ form_label(form.stock) }}
                            {{ form_widget(form.stock, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(form.stock) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category, { attr: { class: 'form-control' } }) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.imageFile) }}
                        {{ form_widget(form.imageFile, { attr: { class: 'form-control' } }) }}
                        {{ form_errors(form.imageFile) }}
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <button type="submit" class="btn btn-eco px-4">Create Product</button>
                        <a href="{{ path('admin_products') }}" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>

{% endblock %}
