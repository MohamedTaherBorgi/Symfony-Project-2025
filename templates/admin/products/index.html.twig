{% extends 'base.html.twig' %}

{% block title %}Manage Products - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸ“¦ Manage Products</h1>
    <a href="{{ path('admin_product_new') }}" class="btn btn-eco">+ Add Product</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.nom }}</td>
                        <td><span class="badge bg-secondary">{{ product.category.nom }}</span></td>
                        <td>{{ product.prix }} TND</td>
                        <td>
                            <span class="badge bg-{{ product.stock > 10 ? 'success' : 'warning' }}">
                                {{ product.stock }}
                            </span>
                        </td>
                        <td>
                            <a href="{{ path('admin_product_edit', {id: product.id}) }}"
                               class="btn btn-sm btn-primary">Edit</a>
                            <form method="post"
                                  action="{{ path('admin_product_delete', {id: product.id}) }}"
                                  class="d-inline">
                                <button type="button"
                                        class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-product-id="{{ product.id }}">
                                    Delete
                                </button>

                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No products yet</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 15px;">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Product Deletion</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p>This product will be permanently removed. Do you want to continue?</p>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <form id="deleteProductForm" method="post">
                        <input type="hidden" name="_token" id="deleteProductToken">
                        <button type="submit" class="btn btn-danger">Yes, delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
