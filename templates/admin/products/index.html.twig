{% extends 'base.html.twig' %}

{% block title %}
    {% if category is defined %}
        Products in {{ category.nom }}
    {% else %}
        All Products
    {% endif %}
{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        {% if category is defined %}
            <h1>ðŸ“¦ Products in {{ category.nom }}</h1>
        {% else %}
            <h1>ðŸ“¦ All Products</h1>
        {% endif %}
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Show</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.nom }}</td>
                            <td><span class="badge bg-secondary">{{ product.category.nom }}</span></td>
                            <td>{{ product.prix }} TND</td>

                            <td>
                            <span class="badge bg-{{ product.stock > 10 ? 'success' : 'warning' }}">
                                {{ product.stock }}
                            </span>
                            </td>

                            <td>
                                <a href="{{ path('product_show', { id: product.id }) }}"
                                   class="btn btn-sm btn-info">
                                    View
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No products found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
