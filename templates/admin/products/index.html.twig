{% extends 'base.html.twig' %}

{% block title %}
    {% if category is defined %}
        Products in {{ category.nom }}
    {% else %}
        All Products
    {% endif %}
{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        {% if category is defined %}
            <h1>ðŸ“¦ Products in {{ category.nom }}</h1>
        {% else %}
            <h1>ðŸ“¦ All Products</h1>
        {% endif %}

        <a href="{{ path('product_new') }}" class="btn btn-success">
            + Add New Product
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.nom }}</td>
                            <td><span class="badge bg-secondary">{{ product.category.nom }}</span></td>
                            <td>{{ product.prix }} TND</td>

                            <td>
                            <span class="badge bg-{{ product.stock > 10 ? 'success' : 'warning' }}">
                                {{ product.stock }}
                            </span>
                            </td>

                            <td class="text-end">
                                <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-sm btn-warning">Edit</a>

                                <form action="{{ path('product_delete', { id: product.id }) }}" method="POST"
                                      class="d-inline" onsubmit="return confirm('Delete?');">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete_product_' ~ product.id) }}">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No products found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
