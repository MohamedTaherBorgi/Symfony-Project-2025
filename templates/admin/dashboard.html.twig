{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - EcoStore{% endblock %}

{% block body %}
<h1 class="mb-4">⚙️ Admin Dashboard</h1>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <h2>{{ totalProducts }}</h2>
                <a href="{{ path('admin_products') }}" class="btn btn-light btn-sm">Manage</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <h2>{{ totalOrders }}</h2>
                <a href="{{ path('admin_orders') }}" class="btn btn-light btn-sm">Manage</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white" style="background: var(--eco-dark);">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h2>{{ totalUsers }}</h2>
                <a href="{{ path('admin_users') }}" class="btn btn-light btn-sm">Manage</a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Recent Orders</h4>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in recentOrders %}
                    <tr>
                        <td><strong>{{ order.orderNumber }}</strong></td>
                        <td>{{ order.user.prenom ~ ' ' ~ order.user.nom }}</td>
                        <td>{{ order.totalAmount }} TND</td>
                        <td>
                            <span class="badge bg-{{ order.status == 'delivered' ? 'success' : 'warning' }}">
                                {{ order.status|title }}
                            </span>
                        </td>
                        <td>{{ order.createdAt|date('d M Y') }}</td>
                        <td>
                            <a href="{{ path('admin_order_show', {id: order.id}) }}" 
                               class="btn btn-sm btn-eco">View</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No orders yet</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
