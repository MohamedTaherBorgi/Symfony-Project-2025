{% extends 'base.html.twig' %}

{% block title %}Manage Users - Admin{% endblock %}

{% block body %}
    <h1 class="mb-4">ðŸ‘¥ Manage Users</h1>

    <h6 style="color: crimson">Admin automatically includes Client</h6>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <form method="POST">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            {% set isAdmin = 'ROLE_ADMIN' in user.roles %}

                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.prenom }} {{ user.nom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.telephone }}</td>
                                <td>
                                    <!-- CLIENT -->
                                    <div class="form-check">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="roles_{{ user.id }}"
                                            value="ROLE_CLIENT"
                                            id="client_{{ user.id }}"
                                            {% if not isAdmin %}checked{% endif %}
                                            {% if user.id == currentUserId %}disabled{% endif %}
                                        >
                                        <label class="form-check-label" for="client_{{ user.id }}">
                                            Client
                                        </label>
                                    </div>

                                    <!-- ADMIN -->
                                    <div class="form-check">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="roles_{{ user.id }}"
                                            value="ROLE_ADMIN"
                                            id="admin_{{ user.id }}"
                                            {% if isAdmin %}checked{% endif %}
                                            {% if user.id == currentUserId %}disabled{% endif %}
                                        >
                                        <label class="form-check-label" for="admin_{{ user.id }}">
                                            Admin
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    Save Roles
                </button>
            </div>
        </div>
    </form>
{% endblock %}
