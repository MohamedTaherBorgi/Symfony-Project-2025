{% extends 'base.html.twig' %}

{% block title %}Manage Categories - EcoStore{% endblock %}

{% block stylesheets %}
<style>
    .categories-page {
        padding: 2rem 0;
    }

    .page-header {
        margin-bottom: 3rem;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: var(--charcoal);
        font-size: 1.05rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .btn-add-category {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        background: var(--sage-primary);
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(107, 123, 117, 0.2);
    }

    .btn-add-category:hover {
        background: var(--forest-dark);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(107, 123, 117, 0.3);
    }

    .categories-container {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    /* Modern Table */
    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-modern thead th {
        background: #f8f9fa;
        color: #6b7b75;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem;
        border: none;
        text-align: left;
    }

    .table-modern thead th:first-child {
        border-radius: 8px 0 0 0;
    }

    .table-modern thead th:last-child {
        border-radius: 0 8px 0 0;
    }

    .table-modern tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-modern tbody tr:hover {
        background: #f8f9fa;
    }

    .table-modern tbody td {
        padding: 1.25rem 1rem;
        color: var(--charcoal);
        font-size: 0.95rem;
    }

    .category-id {
        font-weight: 700;
        color: var(--sage-primary);
        font-family: 'Courier New', monospace;
    }

    .category-name {
        font-weight: 600;
        color: var(--forest-deep);
    }

    .category-description {
        color: #6b7b75;
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .product-count {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        background: linear-gradient(135deg, rgba(156, 39, 176, 0.15), rgba(106, 27, 154, 0.15));
        color: #6a1b9a;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .btn-action {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        cursor: pointer;
    }

    .btn-edit {
        background: linear-gradient(135deg, rgba(33, 150, 243, 0.15), rgba(21, 101, 192, 0.15));
        color: #1565c0;
    }

    .btn-edit:hover {
        background: #1565c0;
        color: white;
        transform: translateY(-2px);
    }

    .btn-delete {
        background: linear-gradient(135deg, rgba(244, 67, 54, 0.15), rgba(211, 47, 47, 0.15));
        color: #d32f2f;
    }

    .btn-delete:hover {
        background: #d32f2f;
        color: white;
        transform: translateY(-2px);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.2;
    }

    .empty-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
    }

    .empty-text {
        color: #6b7b75;
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .action-buttons {
            flex-direction: column;
        }

        .category-description {
            max-width: 150px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="categories-page">
    <div class="page-header">
        <h1 class="page-title">Manage Categories</h1>
        <p class="page-subtitle">Organize your product categories</p>
    </div>

    <div class="header-actions">
        <a href="{{ path('admin_category_new') }}" class="btn-add-category">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Category
        </a>
    </div>

    <div class="categories-container">
        <div class="table-responsive">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Products</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><span class="category-id">#{{ category.id }}</span></td>
                            <td><span class="category-name">{{ category.nom }}</span></td>
                            <td><span class="category-description">{{ category.description|default('No description') }}</span></td>
                            <td>
                                <span class="product-count">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                    </svg>
                                    {{ category.products|length }}
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn-action btn-edit">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                        Edit
                                    </a>
                                    
                                    <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                                        <button type="submit" class="btn-action btn-delete" onclick="return confirm('Are you sure you want to delete \'{{ category.nom|escape('js') }}\'?{% if category.products|length > 0 %}\n\nWarning: This category has {{ category.products|length }} product(s).{% endif %}');">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="3" y="3" width="7" height="7"></rect>
                                            <rect x="14" y="3" width="7" height="7"></rect>
                                            <rect x="14" y="14" width="7" height="7"></rect>
                                            <rect x="3" y="14" width="7" height="7"></rect>
                                        </svg>
                                    </div>
                                    <h3 class="empty-title">No Categories Yet</h3>
                                    <p class="empty-text">Start organizing your products by creating your first category</p>
                                    <a href="{{ path('admin_category_new') }}" class="btn-add-category">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <line x1="12" y1="5" x2="12" y2="19"></line>
                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                        </svg>
                                        Add Your First Category
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
