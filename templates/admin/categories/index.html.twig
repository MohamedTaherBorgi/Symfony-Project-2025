{% extends 'base.html.twig' %}

{% block title %}Manage Categories{% endblock %}

{% block body %}
    <h1 class="mb-4">ðŸ“‚ Manage Categories</h1>

    <a href="{{ path('admin_category_new') }}" class="btn btn-eco mb-3">+ Add Category</a>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Products</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.nom }}</td>
                        <td>{{ category.description|default('â€”') }}</td>
                        <td>{{ category.products|length }}</td>
                        <td>
                            <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-primary btn-sm">Edit</a>

                            <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                                <button class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ category.id }}"
                                        type="button">Delete</button>
                            </form>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal{{ category.id }}" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Confirm Deletion</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Delete category "{{ category.nom }}"?
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                            <form action="{{ path('admin_category_delete', {id: category.id}) }}" method="post">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                                                <button type="submit" class="btn btn-danger">Yes, delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-center">No categories yet</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
