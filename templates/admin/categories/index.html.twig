{% extends 'base.html.twig' %}

{% block title %}Manage Categories - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>üìÅ Manage Categories</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-eco">+ Add Category</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Products</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td><strong>{{ category.nom }}</strong></td>
                        <td>{{ category.description|slice(0, 50) }}...</td>
                        <td>{{ category.products|length }} products</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No categories yet</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}