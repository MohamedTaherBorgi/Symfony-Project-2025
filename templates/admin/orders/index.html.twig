{% extends 'base.html.twig' %}

{% block title %}Manage Orders - EcoStore{% endblock %}

{% block stylesheets %}
<style>
    .orders-page {
        padding: 2rem 0;
    }

    .page-header {
        margin-bottom: 3rem;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: var(--charcoal);
        font-size: 1.05rem;
    }

    .orders-container {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    /* Modern Table */
    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-modern thead th {
        background: #f8f9fa;
        color: #6b7b75;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem;
        border: none;
        text-align: left;
    }

    .table-modern thead th:first-child {
        border-radius: 8px 0 0 0;
    }

    .table-modern thead th:last-child {
        border-radius: 0 8px 0 0;
    }

    .table-modern tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-modern tbody tr:hover {
        background: #f8f9fa;
    }

    .table-modern tbody td {
        padding: 1.25rem 1rem;
        color: var(--charcoal);
        font-size: 0.95rem;
    }

    .order-number {
        font-weight: 700;
        color: var(--forest-deep);
    }

    .customer-name {
        font-weight: 500;
    }

    .amount {
        font-weight: 700;
        color: var(--sage-primary);
    }

    /* Payment Method Badge */
    .payment-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        background: linear-gradient(135deg, rgba(33, 150, 243, 0.15), rgba(21, 101, 192, 0.15));
        color: #1565c0;
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: capitalize;
    }

    .status-badge::before {
        content: '';
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }

    .status-badge.pending {
        background: rgba(255, 193, 7, 0.15);
        color: #f57c00;
    }

    .status-badge.pending::before {
        background: #f57c00;
    }

    .status-badge.processing {
        background: rgba(33, 150, 243, 0.15);
        color: #1976d2;
    }

    .status-badge.processing::before {
        background: #1976d2;
    }

    .status-badge.shipped {
        background: rgba(156, 39, 176, 0.15);
        color: #7b1fa2;
    }

    .status-badge.shipped::before {
        background: #7b1fa2;
    }

    .status-badge.delivered {
        background: rgba(76, 175, 80, 0.15);
        color: #388e3c;
    }

    .status-badge.delivered::before {
        background: #388e3c;
    }

    .status-badge.cancelled {
        background: rgba(244, 67, 54, 0.15);
        color: #d32f2f;
    }

    .status-badge.cancelled::before {
        background: #d32f2f;
    }

    .btn-view {
        padding: 0.5rem 1.2rem;
        font-size: 0.85rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        background: var(--sage-primary);
        color: white;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-view:hover {
        background: var(--forest-dark);
        color: white;
        transform: translateY(-2px);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.2;
    }

    .empty-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--forest-deep);
        margin-bottom: 0.5rem;
    }

    .empty-text {
        color: #6b7b75;
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .table-responsive {
            overflow-x: auto;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="orders-page">
    <div class="page-header">
        <h1 class="page-title">Manage Orders</h1>
        <p class="page-subtitle">Track and manage customer orders</p>
    </div>

    <div class="orders-container">
        <div class="table-responsive">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><span class="order-number">{{ order.orderNumber }}</span></td>
                            <td><span class="customer-name">{{ order.user.prenom ~ ' ' ~ order.user.nom }}</span></td>
                            <td><span class="amount">{{ order.totalAmount }} TND</span></td>
                            <td>
                                <span class="payment-badge">{{ order.paymentMethod|title|replace({'_': ' '}) }}</span>
                            </td>
                            <td>
                                {% if order.status == 'pending' %}
                                    <span class="status-badge pending">Pending</span>
                                {% elseif order.status == 'processing' %}
                                    <span class="status-badge processing">Processing</span>
                                {% elseif order.status == 'shipped' %}
                                    <span class="status-badge shipped">Shipped</span>
                                {% elseif order.status == 'delivered' %}
                                    <span class="status-badge delivered">Delivered</span>
                                {% else %}
                                    <span class="status-badge cancelled">{{ order.status|title }}</span>
                                {% endif %}
                            </td>
                            <td>{{ order.createdAt|date('d M Y') }}</td>
                            <td>
                                <a href="{{ path('admin_order_show', {id: order.id}) }}" class="btn-view">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    View
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="9" cy="21" r="1"></circle>
                                            <circle cx="20" cy="21" r="1"></circle>
                                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                                        </svg>
                                    </div>
                                    <h3 class="empty-title">No Orders Yet</h3>
                                    <p class="empty-text">Orders will appear here when customers make purchases</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
