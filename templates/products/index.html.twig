{% extends "base.html.twig" %}

{% block title %}Produits - EcoStore{% endblock %}

{% block content %}
<div class="container py-5">
    <h1 class="mb-4">Nos Produits</h1>
    
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Filtres</h5>
                    <div class="mb-3">
                        <label class="form-label">Catégorie</label>
                        <select class="form-select">
                            <option selected>Toutes les catégories</option>
                            <option>Soins personnels</option>
                            <option>Maison</option>
                            <option>Alimentation</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prix</label>
                        <input type="range" class="form-range" min="0" max="100">
                        <small class="text-muted">0€ - 100€</small>
                    </div>
                    <button class="btn btn-primary w-100">Appliquer les filtres</button>
                </div>
            </div>
        </div>
        
        <!-- Products Grid -->
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-1.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Shampooing Naturel</h5>
                            <p class="card-text">Shampooing 100% naturel et écologique pour cheveux sains</p>
                            <p class="text-success fw-bold">29.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-2.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Savon Bio</h5>
                            <p class="card-text">Savon artisanal fabriqué à partir d'ingrédients biologiques</p>
                            <p class="text-success fw-bold">12.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-3.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Crème Hydratante</h5>
                            <p class="card-text">Crème hydratante naturelle pour tous types de peaux</p>
                            <p class="text-success fw-bold">34.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-4.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Déodorant Naturel</h5>
                            <p class="card-text">Déodorant écologique sans aluminium ni produits chimiques</p>
                            <p class="text-success fw-bold">15.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-1.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Huile Essentielle</h5>
                            <p class="card-text">Huile essentielle pure et biologique pour aromathérapie</p>
                            <p class="text-success fw-bold">24.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('img/product-2.jpg') }}" class="card-img-top" alt="Produit">
                        <div class="card-body">
                            <h5 class="card-title">Baume à Lèvres</h5>
                            <p class="card-text">Baume à lèvres naturel avec cire d'abeille biologique</p>
                            <p class="text-success fw-bold">8.99€</p>
                            <button class="btn btn-primary btn-sm">Ajouter au panier</button>
                            <button class="btn btn-outline-secondary btn-sm">Détails</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endblock %}
